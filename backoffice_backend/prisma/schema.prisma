generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Payment {
  id          Int       @id @default(autoincrement())
  supplierId  Int
  paymentType String
  amount      Float
  dueDate     String?   @db.Char(10)
  store       String
  status      String
  description String?
  boletoCode  String?
  paymentDate DateTime?

  @@index([supplierId], map: "Payment_supplierId_fkey")
}

model Supplier {
  id      Int    @id @default(autoincrement())
  name    String
  cnpj    String
  address String
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
  role     Role   @default(USER)

  @@map("users")
}

enum Role {
  ADMIN
  USER
}
