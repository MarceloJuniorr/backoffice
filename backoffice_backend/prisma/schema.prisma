datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Payment {
  id          Int       @id @default(autoincrement())
  supplierId  Int
  paymentType String
  amount      Float
  dueDate     String
  store       String
  status      String
  description String? // Opcional
  boletoCode  String? // Opcional
  paymentDate DateTime?
}

model Supplier {
  id      Int    @id @default(autoincrement())
  name    String
  cnpj    String
  address String
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
  role     Role   @default(USER)

  @@map("users")
}

enum Role {
  ADMIN
  USER
}
